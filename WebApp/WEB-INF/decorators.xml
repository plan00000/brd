<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/layouts/">
	<!-- 此处用来定义不需要过滤的页面 -->
	<excludes>
		<pattern>/Ueditor/*</pattern>
		<pattern>/api/*</pattern>
		<pattern>/admin/login*</pattern>
		<pattern>/html/*</pattern>
	</excludes>
	<!-- 后台管理 -->
	<decorator name="default" page="default_admin_main.jsp">
		<pattern>/admin/*</pattern>
	</decorator>
	<!-- 微信手机站布局 -->
	<decorator name="mobile_default" page="default_mobile.jsp">
		<pattern>/weixin/*</pattern>
	</decorator>
	<!--  pc布局-->
	<decorator name="front_default" page = "default_front.jsp">
		<pattern>/pc/*</pattern>
	</decorator>
	<decorator name="default" page = "default_admin_main.jsp">
		<pattern>/</pattern>
	</decorator>
</decorators>

